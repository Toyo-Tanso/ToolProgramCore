@model ToolProgramCore.Models.ToolEdit

@{
    ViewData["Title"] = "Add Tool";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="w-auto me-5 mt-4 mb-3">
    <h1>Add Tool</h1>

    <h4>Tool</h4>
</div>
<hr />
<h4>Quick note:</h4>
<p class="mt-3 mb-4">

    Tools can be added by any Employee by submiting a measure.
    <br/>
    <br />
    Location are added by adding a measure, or going to details after adding a Tool.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTool">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Tool_ID" class="control-label"></label>
                <input asp-for="Tool_ID" class="form-control" />
                <span asp-validation-for="Tool_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Tool" class="btn btn-primary buttonPurple"/>
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

