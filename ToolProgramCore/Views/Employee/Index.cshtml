@model IEnumerable<ToolProgramCore.Models.Employee>

@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mt-4 " >Employees</h1>

<div class="w-100 d-flex mb-3 mt-3">
    <a 
        class="btn btn-primary adminButton btn-md me-2" 
        role="button" asp-action="AddEmployee">Add Employee</a>
    <a 
        class="btn btn-secondary adminButtonFilled btn-md "
       role="button" href="~/Home/AdminLoggedIn">Back to Console</a>
</div>
@if (@Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th class="visually-hidden">
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clock_Code)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td class="visually-hidden">
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clock_Code)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@

                       
                        <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="N/A. Contact IT.">
                            <a 
                                class="btn disabled p-0"
                               style="pointer-events: none;"
                               >Remove</a>
                        </span>
                        @*@Html.ActionLink("Remove", "Remove", new { /* id=item.PrimaryKey */ })*@
                    </td>


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div><p class="is-invalid">No Results Found...</p></div>

}

