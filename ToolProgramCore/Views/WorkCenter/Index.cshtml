@model IEnumerable<ToolProgramCore.Models.WorkCenter>

@{
    ViewData["Title"] = "WorkCenters";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1 class="mt-4">WorkCenters</h1>

<div class="w-100 d-flex mb-3 mt-3">
    <a class="btn btn-primary adminButton btn-md me-2"
       role="button" asp-action="AddWC">Add WorkCenter</a>
    <a class="btn btn-secondary adminButtonFilled btn-md "
       role="button" href="/Home/AdminLoggedIn">Back to Console</a>
</div>
@if (@Model.Count() != 0)
{
    <p class="mt-3 mb-0">For more information, see details.</p>
    <table class="table">
        <thead>
            <tr>
                <th class="visually-hidden">
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="visually-hidden">
                    @Html.DisplayNameFor(model => model.WCUnder)
                </th>
                <th class="visually-hidden">
                    @Html.DisplayNameFor(model => model.Active)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.Active=="True" ? "" : "table-inactive")">
                    <td class="visually-hidden">
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="visually-hidden">
                        [See Details]
                    </td>
                    <td class ="visually-hidden">
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        @if(item.Active=="True") {
                        @Html.ActionLink("Edit", "edit", null,
                new {id=item.ID}, new{ @class="btn adminSec"})
                        @Html.ActionLink("Details", "Details", null,
                            new {id=item.ID}, new{ @class="btn adminSec" })
                        @Html.ActionLink("Deactivate", "Deactivate", null,
                new {id=item.ID}, new{ @class="btn adminSec "})
                        }
                        else
                        {
                            @Html.ActionLink("Reactivate", "Reactivate", null,
                new {id=item.ID}, new{ @class="btn adminInactive "})
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div><p class="is-invalid">No Results Found...</p></div>

}

