@model ToolProgramCore.Models.WorkCenter

@{
    ViewData["Title"] = "Add WC";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="w-auto me-5 mt-4 mb-3">
    <h1>Add WorkCenter</h1>

    <h4>WorkCenter</h4>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddWC">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group visually-hidden">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="WCUnder" class="control-label"></label>
                <select multiple class="form-control" asp-for="WCUnder">

                    @if (!(Model is null) && Model.WCdropDownList is not null)
                    {
                        foreach (var wc in Model.WCdropDownList)
                        {
                            <option >
                                @(wc[0].Trim())
                            </option>
                        }
                    }
                </select>
                <span asp-validation-for="WCUnder" class="text-danger"></span>
            </div>
            <div class="form-group visually-hidden">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="AddWC" class="btn btn-primary buttonPurple" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Back to List</a>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}