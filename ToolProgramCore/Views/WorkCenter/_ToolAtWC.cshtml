@model ToolProgramCore.Models.WorkCenter

@{
    if(Model == null || Model.Tools == null || Model.Tools.Count < 1)
    {
        <p>No tools found!</p>
    }
    else
    {
        <h3>Tools</h3>
        <table class="table @(Model.IsRemoval??false ? "":"table-striped ")">
            <thead>
                <tr>
                    <th>Tool</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach(List<string> tool in Model.Tools)
                {
                    <tr class="tableHover @(Model.IsRemoval??false ? "table-danger":"")">
                        <td>@(tool[0])</td>
                        <td>@(tool[1])</td>
                    </tr>
                }
            </tbody>
        </table>
